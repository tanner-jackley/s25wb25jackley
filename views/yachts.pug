extends layout

block content
  h1= title
  - let results = [{brand: "Sunseeker", year_built: 2015, engine_power: 1500}, {brand: "Azimut", year_built: 2010, engine_power: 800}, {brand: "Princess", year_built: 2020, engine_power: 2500}]
  div(class="container-fluid")
    div(class="row")
      each yacht, index in results
        div(class="col-sm-2", onclick=`buy(${index})`) Brand: #{yacht.brand}, Year Built: #{yacht.year_built}, Engine Power: #{yacht.engine_power}

  script.
    function buy(index) {
      alert("You purchased item " + index);
    }